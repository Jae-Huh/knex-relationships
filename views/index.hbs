<!DOCTYPE html>
<html>
  <head>
    <title>EDA Phase 1 Express Boilerplate</title>
  </head>
  <body>
    <ul>
    {{#each users}}
      <li><a href="/user/{{id}}">{{name}}</a> ({{email}})</li>
    {{/each}}
    </ul>
    <h2>Add User</h2>
    <form action="/" method="POST">
    <label>Name</label>
      <input type="text" name="user_name">
    <label>Email</label>
    <input type="text" name="email">
    <label>Picture</label>
    <input type="text" name="picture">
    <label>URL</label>
    <input type="text" name="url">
    <input type="submit" value="Submit">
  </form>
  </body>
</html>
